    "lint:js:fix": "eslint -c config/eslint/base.json './scripts/**/*.js' --ignore-path config/eslint/.eslintignore --fix",
    "pixelpolice": "node bin/cli.js",
    "pixelpolice:realistic": "node bin/cli.js --config ./scripts/example-config.js",
    "pixelpolice:realistic:verbose": "node bin/cli.js --config ./scripts/example-config.js --verbose",
    "pixelpolice:single": "node bin/cli.js --config ./test/pseudo/pseudo.spec.json --verbose"
